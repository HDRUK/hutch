{
  "AllowedHosts": "*",

  "Serilog": {
    "Using": ["Serilog.Sinks.PostgreSQL.Configuration"],
    "MinimumLevel": "Debug",
    "Enrich": ["WithMachineName"],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "PostgreSQL",
        "Args": {
          "connectionString": "Default",
          "tableName": "Logs",
          "loggerColumnOptions": {
            "Id": "IdAutoIncrement",
            "Message": "RenderedMessage",
            "MessageTemplate": "Message",
            "Level": "LevelAsText",
            "Timestamp": "Timestamp",
            "Exception": "Exception",
            "Properties": "Properties"
          },
          "useCopy": true,
          "needAutoCreateTable": true,
          "batchSizeLimit": 1
        }
      }
    ]
  }
}
